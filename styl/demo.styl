@import "global/import.styl"
.info-list
    text-align:left
    margin-left:10px
    margin-right:10px
    li
        border-bottom:1px dashed #fafafa
.offer-list
    margin-right:-12px
.orange
    color:$color-orange
for row in 1 .. 20
    .grid-{row}
        padding-top: 0
        padding-bottom: 0
        *overflow:hidden
@media only screen and (min-width: 1220px) and (max-width: 1419px)
    .offer-list
        margin-right:-12px
@media only screen and (min-width: 1420px)
    .offer-list
        margin-right:-14px
