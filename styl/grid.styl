@import "global/import.styl"
.img-responsive
    display: inline-block
    height: auto
    max-width: 100%
for row in 1 .. 20
    .grid-{row}
        padding-top: 15px
        padding-bottom: 15px
        background-color: #ff7300
        text-align:center
.row
    margin-bottom:10px
.resize-layout
    for row in 1 .. 20
        .grid-{row}
            width:40px * row + 10px * (row - 1)
            margin-right:10px
            -float:left
@media only screen and (min-width: 1220px) and (max-width: 1419px)
    body
        font-size:14px
    .screen
        width:1190px
    .resize-layout
        for row in 1 .. 20
            .grid-{row}
                width:48px * row + 12px * (row - 1)
                margin-right:12px
@media only screen and (min-width: 1420px)
    body
        font-size:16px
    .screen
        width:1390px
    .resize-layout
        for row in 1 .. 20
            .grid-{row}
                width:56px * row + 14px * (row - 1)
                margin-right:14px