.input-text
    border:solid 1px #a0a0a0
    height:18px
    width:140px
    padding:3px 4px
    background-color:#fff
    background-position:98px -67px
    overflow:hidden
    vertical-align:middle
    color:#444
    box-shadow:inset 0 1px 1px #e6e6e6
.input-text:focus
    border-color:#6482b9
    background-color:#fff
    box-shadow:inset 0 1px 1px #e6e6e6,0 0 2px #a3c1f2
.input-text-s
    padding:1px 2px
    width:90px
    background-position:96px -69px
.input-text-l
    padding:1px 2px
    width:280px
.input-text-error
    border-color:#da7070
    background-color:#fff5f5
    box-shadow:inset 0 1px 1px #e5dcdc